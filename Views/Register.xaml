<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSClient.Views.Register"
             >
    <StackLayout VerticalOptions="FillAndExpand">

        <Label
        FontSize="50"
        HorizontalOptions="Center"
        Text="Register page"
        TextColor="Purple"
           
    />

        <ScrollView
            HorizontalScrollBarVisibility="Always"
            VerticalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Always">

            <Grid ColumnDefinitions="*" RowDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*,*" >

                <Label
                    x:Name="name_lbl"
                    Grid.Column="0"
                    Margin="15"
                    Text="Username"
                    Grid.Row="1"
                />

                <Entry
                    Grid.Column="0"
                    Placeholder="enter user name"
                     PlaceholderColor="Grey"
                    Grid.Row="2"
                    Text="{Binding Name}"
                  
                />

                <Label
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="15"
                    HorizontalOptions="Start"
                    Text="{Binding User_Error}"
                    TextColor="Red" />


                <Label
                     x:Name="email_lbl"
                     Grid.Row="4"
                    Grid.Column="0"
                    Margin="15"
                    Text="Email"
                    />

                <Entry
                    Grid.Row="5"
                    Grid.Column="0"
                    Keyboard="Email"
                    Placeholder="enter email"
                    PlaceholderColor="Grey"
                    Text="{Binding Password}"
                   />

                <Label
                       x:Name="city_lbl"
                       Grid.Row="6"
                    Grid.Column="0"
                        Margin="15"
                       Text="City"
                    />

                 <Entry
                     Grid.Row="7"
                     Grid.Column="0"
                     Placeholder="enter city"
                     PlaceholderColor="Grey"
                     Text="{Binding City}"
                  
                  />

                <Label
                    x:Name="password_lbl"
                    Grid.Row="8"
                    Grid.Column="0"
                    Margin="15"
                    Text="Password"
                 />
                <Entry
                    Grid.Row="9"
                    Grid.Column="0"
                    Keyboard="Chat"
                    Margin="15"
                    Placeholder="enter password"
                    PlaceholderColor="Grey"
                    Text="{Binding Password, Mode=TwoWay}" />

                <Label
                    Grid.Row="10"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Start"
                    Text="{Binding Password_Error, Mode=TwoWay}"
                    TextColor="red" />

                <Label
                    Grid.Row="11"
                    Margin="15"
                    Text="Select the user type:"
                    />

                    <StackLayout
                    Grid.Row="12"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Start"
                    Orientation="Horizontal" RadioButtonGroup.GroupName="UserType">
                        <!--  RadioButton בייביסיטר  -->
                        <RadioButton
                        Content="babysitter"
                        GroupName="UserType"
                        IsChecked="{Binding IsBabySiterChecked}"
                         />

                        <!--  RadioButton הורה  -->
                        <RadioButton
                        Content="parent"
                        GroupName="UserType"
                        IsChecked="{Binding IsParentChecked}" />
                    </StackLayout>

                <StackLayout IsVisible="{Binding IsBabySiterChecked}"> <!--אנטריז נוספים לבייביסיטר-->
                <Label
                      x:Name="age_lbl"
                     Grid.Column="0"
                     Margin="15"
                     Text="age"
                     Grid.Row="13"
                />

                <Slider  Grid.Column="0"
                    Minimum="12"
                    Maximum="120"
                    BackgroundColor="Grey"
                     Grid.Row="14"
                    Value="{Binding Age}">
                    
                </Slider>

                <Label
                     x:Name="experience_lbl"
                     Grid.Column="0"
                     Margin="15"
                     Text="enter your experience years"
                     Grid.Row="15" />

                <Slider  Grid.Column="0"
                     Minimum="0"
                     Maximum="99"
                     BackgroundColor="Grey"
                     Grid.Row="16"
                     Value="{Binding Experience}">

                </Slider>
                
                <Label
                    x:Name="license_lbl"
                    Grid.Column="0"
                    Margin="15"
                    Text="do you have license?"
                    Grid.Row="17" />

                <StackLayout
                    Grid.Row="18"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Start"
                    Orientation="Horizontal" RadioButtonGroup.GroupName="Havelicense" >
                    
                    <RadioButton
                        Content="Yes"
                        GroupName="HaveLicence"
                        IsChecked="{Binding HaveLicense}"/>

                   
                    <RadioButton
                        Content="No"
                        GroupName="HaveLicence"
                        IsChecked="{Binding DoesntHaveLicense}"/>
                </StackLayout>
                    
                    </StackLayout>
                
                
                <StackLayout IsVisible="{Binding IsParentChecked}">
                        <!--אנטריז נוספים להורה-->
                     <Label
                      x:Name="kidsN_lbl"
                      Grid.Column="0"
                      Margin="15"
                      Text="kids"
                      Grid.Row="19"
                     />

                <Label
                    Grid.Row="20"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Start"
                    Text="{Binding KidsN, Mode=TwoWay}"
                    />

                    <Label
                    x:Name="pets_lbl"
                    Grid.Column="0"
                    Margin="15"
                    Text="do you have pets?"
                    Grid.Row="21" 

                    <RadioButton
                    Content="Yes"
                    GroupName="pets"
                    IsChecked="{Binding HavePets}"/>


                    <RadioButton
                   Content="No"
                   GroupName="pets"
                   IsChecked="{Binding DoesntHavePets}"/>

                    </Label>
                </StackLayout>
                 
                <Button
                    Grid.Row="13"
                    Grid.ColumnSpan="2"
                    Command="{Binding RegistrationCommand}"
                    IsEnabled="{Binding CanRegister}"
                    Text="Send" />
/>

            </Grid>
        </ScrollView>
    </StackLayout>
</ContentPage>